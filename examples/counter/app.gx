package main

func App() {
	counter := make(chan int, 10)

	Div(Class("app-container")) {
		H1 {
			"Counter Example"
		}
		Counter(WithCounterChannel(counter))
		Div(Class("button-group")) {
			Button(
				Class("increment-btn"),
				OnClick(func(e: Event) {
					counter <- 1
				})
			) {
				"Increment"
			}
		}
	}
}
