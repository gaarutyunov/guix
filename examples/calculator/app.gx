package main

func App() (Component) {
	stateChannel := make(chan CalculatorState, 10)
	stateChannel <- CalculatorState{
		Display:        "0",
		Expression:     "",
		LastResult:     0,
		JustCalculated: false,
	}

	Div(Class("app-container")) {
		H1 {
			"Calculator"
		}
		Calculator(WithStateChannel(stateChannel))
		Div(Class("info")) {
			"Built with Guix"
		}
	}
}
